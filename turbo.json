{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "health-check": {
            "cache": false
        },
        "build": {
            "dependsOn": [
                "^build"
            ]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "frontend#dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "backend#health-check"
            ]
        },
        "start": {
            "dependsOn": [
                "^build"
            ],
            "cache": false,
            "persistent": true
        },
        "start:build": {
            "dependsOn": [
                "^build"
            ],
            "cache": false,
            "persistent": true
        }
    }
}
